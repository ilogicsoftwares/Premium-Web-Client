@model Premium_Web_Client.Models.LoginModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/stylish-portfolio.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/w3.css">
</head>
<body>
    <header id="top" class="header">
        <div class="text-vertical-center">

            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            { 
            <img src="~/img/logogrande.png" style="max-width:100px" />
            <h1>Ingresar</h1>
            <br />
           
                <div class="input-group col-xs-6 center-block">
                    <p>
                        @Html.TextBoxFor(Model => Model.UserName, new { @class = "form-control w3-card-8", placeholder = "Nombre de Usuario", type = "text" })
                        @Html.ValidationMessageFor(Model => Model.UserName, null, new { @style = "color:Red" })
                    </p>
                    <p>
                        @Html.TextBoxFor(Model => Model.PassWord, new { @class = "form-control w3-card-8", placeholder = "Contraseña", type = "password", style = "margin-top:2px" })
                        @Html.ValidationMessageFor(Model => Model.PassWord, null, new { @style = "color:Red" })
                    </p>
                        <p style="color:indianred" class="text-center">@Html.ViewBag.errokey</p>
                    <button type="submit" class="btn btn-default pull-right" style = "margin-top:2px">Ingresar</button>      
                    <div class="text-left">
                        <a href="/Home/Registro">Registrate</a><br />
                        <a href="#">Recuperar Contraseña</a>
                    </div>
                   
                </div>
            }

       </div>
       
</header>
   
</body>
</html>
